<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpBluetooth"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_setup_enable_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enableBluetooth"
            android:text="Enable Bluetooth" />

        <Button
            android:id="@+id/btn_setup_enable_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enableDiscoverability"
            android:text="Enable discoverability" />

        <Button
            android:id="@+id/btn_setup_show_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showDevices"
            android:text="Show the visible devices" />

        <Button
            android:id="@+id/btn_setup_listening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listening"
            android:onClick="listening"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view_setup_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetUpBluetooth">


    <Button
        android:id="@+id/btn_setup_enable_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Bluetooth"
        android:onClick="enableBluetooth"
        />

    <Button
        android:id="@+id/btn_setup_enable_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enableDiscoverability"
        android:text="Enable discoverability" />

    <Button
        android:id="@+id/btn_setup_show_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show the visible devices"
        android:onClick="showDevices"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:id="@+id/edit_text_setup"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_setup_send"
        android:text="Send"
        android:onClick="sendMessageButton"/>

    <ListView
        android:id="@+id/list_view_setup_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>